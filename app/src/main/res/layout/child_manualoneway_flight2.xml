<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/button.light"
    android:paddingBottom="23dp">

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_id"
        android:layout_alignTop="@+id/main_id"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-4dp"
        android:gravity="center_vertical"
        android:text="Pak "
        android:textColor="#000000"
        android:textSize="10dp"/>

    <ImageView
        android:id="@+id/main_id"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="27dp"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/departure_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/company_name"
        android:layout_below="@+id/main_id"
        android:layout_marginTop="12dp"
        android:text="Lahore - Karachi"
        android:textColor="#37474F"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/stops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_from"
        android:layout_below="@+id/departure_from"
        android:layout_marginTop="2dp"
        android:text="Stope:1"
        android:textAllCaps="true"
        android:textColor="#98000000"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/flight_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_from"
        android:layout_below="@+id/stops"
        android:layout_marginTop="22dp"
        android:text="AF-143"
        android:textColor="#37474F"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/departure_timefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/flight_number"
        android:layout_alignLeft="@+id/stops"
        android:layout_marginTop="7dp"
        android:text="07:30"
        android:textColor="#455A64"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tv_departure_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_from"
        android:layout_below="@+id/departure_timefrom"
        android:layout_marginTop="-1dp"
        android:text="LHR"
        android:textAllCaps="true"
        android:textColor="#98000000"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/tv_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flight_number"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/departure_timefrom"
        android:text=" â€” "
        android:textColor="#455A64"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/departure_timeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/departure_timefrom"
        android:layout_below="@+id/tv_arrival_to"
        android:layout_toRightOf="@+id/tv_dash"
        android:text="07:30"
        android:textColor="#455A64"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tv_arrival_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_timeto"
        android:layout_alignTop="@+id/tv_departure_from"
        android:text="DBX"
        android:textAllCaps="true"
        android:textColor="#98000000"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/departure_timefrom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="4h:37m"
        android:textColor="#98000000"
        android:textSize="14dp"/>


    <TextView
        android:id="@+id/vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_from"
        android:layout_below="@+id/tv_departure_from"
        android:layout_marginTop="22dp"
        android:text="airline, J9"
        android:textColor="#37474F"
        android:textSize="15dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/company_name"
        android:layout_alignBottom="@+id/vehicle_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_line"
        android:tint="#cacaca"/>

</RelativeLayout>