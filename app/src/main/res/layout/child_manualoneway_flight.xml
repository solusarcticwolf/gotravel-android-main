<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="60dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/white"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:id="@+id/img_layout"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:id="@+id/main_id"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/right_arrow_blue"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_id"
                    android:id="@+id/company_name"
                    android:layout_centerHorizontal="true"
                    android:text="PIA Air LIne"
                    android:textAlignment="center"
                    android:textSize="8sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD 550"
                    android:layout_below="@+id/company_name"
                    android:textSize="12sp"
                    android:id="@+id/flight_number"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/monsoon"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/img_layout"
                android:background="@color/jet"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"

                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:id="@+id/departure_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:text="12 : 13"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stops"
                        android:textColor="@color/monsoon"
                        android:textSize="10sp"
                        android:text="0 Stops"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/right_arrow_blue"
                        android:layout_marginStart="13dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/departure_from" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/departure_to"
                        android:layout_marginStart="13dp"
                        android:layout_toEndOf="@+id/stops"
                        android:text="12 : 13"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/total_time"
                        android:layout_marginEnd="10dp"
                        android:text="12 : 13"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:id="@+id/top_layout"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/monsoon"
                        android:id="@+id/departure_timefrom"
                        android:text="12 : 13"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/departure_timefrom"
                        android:id="@+id/departure_arrow"
                        android:src="@drawable/right_arrow_blue"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/monsoon"                        android:id="@+id/departure_timeto"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/departure_arrow"
                        android:text="12 : 13"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/price"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:text="12 : 13"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>