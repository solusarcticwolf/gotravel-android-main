<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/iron_de"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location From"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hmaza Javed"
            android:id="@+id/l_from"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location To"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hmaza Javed"
            android:layout_marginTop="4dp"
            android:id="@+id/l_to"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Time"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hmaza Javed"
            android:id="@+id/d_time"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Time"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hmaza Javed"
            android:id="@+id/a_time"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />

    </RelativeLayout> <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Date"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hmaza Javed"
            android:id="@+id/d_date"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Date"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hmaza Javed"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/a_date"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
</LinearLayout>