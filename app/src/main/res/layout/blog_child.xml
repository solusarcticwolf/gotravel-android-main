<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_results_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/results_item_margin_bottom"
    android:layout_marginLeft="@dimen/results_item_margin_left"
    android:layout_marginRight="@dimen/results_item_margin_right"
    android:layout_marginTop="@dimen/results_item_margin_top"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/lodaer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:id="@+id/hoteldetails_progressBar"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/Dark_blue"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:adjustViewBounds="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">



            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="s"
                android:textColor="@color/full_black"
                android:textSize="14dp"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/desc"
                android:text="passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginLeft="4dp"
                android:textColor="@color/jumbo"
                android:textSize="10dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>