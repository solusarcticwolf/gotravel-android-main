<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="430dp"
        android:layout_centerInParent="true"
        android:background="@color/light_black">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/header"
            android:background="@color/congrajulation">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/s_travelport"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Booking Successful"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/congragulation"
                android:layout_marginEnd="10dp"
                android:text="Your booking has been confirmed. Please check your mailbox for more detials. "
                android:layout_marginTop="20dp"/>


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/thumbs"
                android:id="@+id/thumbs"
                android:layout_below="@+id/congragulation"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbs"
                android:text="THANK YOU!"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/Dark_blue"
                android:text="GO BACK"
                android:id="@+id/goto_home"
                android:textColor="@color/white"
                android:textSize="15sp"
                />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>