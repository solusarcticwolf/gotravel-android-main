<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/roomhotelview"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/image"
                                    android:src="@drawable/img2"
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:scaleType="centerCrop"
                                    />


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <com.devspark.robototextview.widget.RobotoTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="15sp"
                                        android:id="@+id/title"
                                        android:text="Classic Room"/>

                                    <com.devspark.robototextview.widget.RobotoTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/child"
                                        android:id="@+id/chld"
                                        android:textSize="11.7sp"
                                        android:textColor="@color/sub_txt_gray"/>

                                    <com.devspark.robototextview.widget.RobotoTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:text="@string/breakfast"
                                        android:textSize="11.7sp"
                                        android:textColor="@color/sub_txt_gray"/>
                                </LinearLayout>


                            </LinearLayout>

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green"
                                android:textSize="9.7sp"
                                android:visibility="gone"
                                android:layout_marginTop="5dp"
                                android:text="Free Cancelation, Sunrise Check-in Available"/>

                        </LinearLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:orientation="vertical">

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_txt_gray"
                            android:textSize="11.7sp"
                            android:visibility="gone"
                            android:text="@string/strike_line"/>


                        <com.devspark.robototextview.widget.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:id="@+id/price"
                            android:textColor="@color/black"
                            android:text="$149"/>

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Per day"
                            android:textColor="@color/sub_txt_gray"
                            android:textSize="8.3sp"/>
                    </LinearLayout>
                </FrameLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_line"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:text="Pay at Hotel"
                        android:textColor="#2ba7b7"
                        android:maxLength="40"
                        android:textSize="13.3sp" />



                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|right"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:visibility="visible"
            app:cardBackgroundColor="@color/blue_009DC5"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/world_map" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/spacing_mlarge"
                    android:paddingRight="@dimen/spacing_mlarge">

                    <ImageView
                        android:id="@+id/card_logo"
                        android:layout_width="50dp"
                        android:layout_height="26dp"
                        android:layout_gravity="end|right"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_visa"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:fontFamily="monospace"
                        android:text="**** **** **** ****"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/spacing_mlarge" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="EXPIRE"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                        android:textColor="@color/grey_10" />

                                    <TextView
                                        android:id="@+id/card_expire"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="monospace"
                                        android:text="MM/YY"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/spacing_xlarge"
                                    android:layout_height="0dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/cvv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CVV"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                        android:textColor="@color/grey_10" />

                                    <TextView
                                        android:id="@+id/card_cvv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="monospace"
                                        android:text="***"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                        android:textColor="@android:color/white" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_large" />

                            <TextView
                                android:id="@+id/card_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:text="Your Name"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_copper_card" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/spacing_medium" />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_mxlarge"
        android:paddingRight="@dimen/spacing_mxlarge">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_middle" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:hint="Credit card number"
            android:inputType="number"
            android:maxLength="16"
            android:maxLines="1"
            android:textSize="12.7sp"
            android:singleLine="true"
            android:textColor="#aab0b9"
            android:textColorHint="#aab0b9"
            android:theme="@style/EditText.Grey" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_expire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_weight="1"
                android:hint="MMYY"
                android:textSize="12.7sp"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#aab0b9"
                android:textColorHint="@color/grey_40"
                android:theme="@style/EditText.Grey" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_cvv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_weight="1"
                android:hint="CVV"
                android:textSize="12.7sp"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#aab0b9"
                android:textColorHint="@color/grey_40"
                android:theme="@style/EditText.Grey" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:hint="Name on card"
            android:textSize="12.7sp"
            android:inputType="text"
            android:maxLength="14"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#aab0b9"
            android:textColorHint="@color/grey_40"
            android:theme="@style/EditText.Grey" />




        <!--Cardview Can be used-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namehotel"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.devspark.robototextview.widget.RobotoEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:backgroundTint="#00000000"
                                android:hint="Name"
                                android:id="@+id/usernameWrapper"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingTop="7dp"
                                android:paddingBottom="10sp"
                                android:textColor="#aab0b9"
                                android:textColorHint="@color/black"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="12.7sp" />

                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.devspark.robototextview.widget.RobotoEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:backgroundTint="#00000000"
                                android:hint="Surname:"
                                android:id="@+id/lastnameWrapper"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingTop="7dp"
                                android:paddingBottom="10sp"
                                android:textColor="#aab0b9"
                                android:textColorHint="@color/black"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="12.7sp" />

                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <com.devspark.robototextview.widget.RobotoEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/emailWrapper"
                            android:background="@android:color/transparent"
                            android:backgroundTint="#00000000"
                            android:hint="Email:"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingTop="7dp"
                            android:paddingBottom="10sp"
                            android:textColor="#aab0b9"
                            android:textColorHint="@color/black"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="12.7sp" />



                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/view_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.devspark.robototextview.widget.RobotoEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:backgroundTint="#00000000"
                                    android:id="@+id/phoneWrapper"
                                    android:hint="Mobile Number"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="10sp"
                                    android:textColor="#aab0b9"
                                    android:textColorHint="@color/black"
                                    android:textCursorDrawable="@drawable/color_cursor"
                                    android:textSize="12.7sp" />

                            </android.support.design.widget.TextInputLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/view_line"/>


                        </LinearLayout>

                    </LinearLayout>






                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--Cardview Can be used-->

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/btn_orange"
            android:text="CONTINUE"
            android:id="@+id/continue_booking"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white" />
    </LinearLayout>




</LinearLayout>

</android.support.v4.widget.NestedScrollView>
