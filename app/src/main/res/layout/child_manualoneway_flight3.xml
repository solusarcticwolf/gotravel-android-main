<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_results_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/results_item_margin_bottom"
    android:layout_marginLeft="@dimen/results_item_margin_left"
    android:layout_marginRight="@dimen/results_item_margin_right"
    android:layout_marginTop="@dimen/results_item_margin_top"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundcolor"
        android:background="@drawable/results_item"
        android:duplicateParentState="true">

        <LinearLayout
            android:id="@+id/content"
            android:background="@drawable/button_light_bkg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/results_item_padding_bottom"
            android:paddingTop="@dimen/results_item_padding_top">




            <RelativeLayout
                android:id="@+id/top_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="17dp">




                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_price"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/tv_price"
                    android:text="RUB"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="1234"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/main_id"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"/>

            </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/datec"
               android:layout_marginLeft="14dp"
               android:layout_marginTop="10dp">

               <com.devspark.robototextview.widget.RobotoTextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="RUB"
                   android:visibility="gone"
                   android:textColor="@color/gray_828282"
                   android:textSize="10dp" />

           </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="7dp"
                android:layout_below="@id/datec"
                android:layout_height="wrap_content">



                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tv_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LED — BER"
                    android:layout_marginLeft="16.66dp"
                    android:textColor="@color/jumbo"
                    android:textSize="12dp"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tv_arrival_and_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_cities"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="14.66dp"
                    android:text="14:20 — 10:50"
                    android:gravity="center"
                    android:textColor="@color/gray_828282"
                    android:textSize="14dp"
                    card_view:robotoTypeface="roboto_medium"/>


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16.66dp"
                    android:text="Stops"
                    android:textColor="@color/jumbo"
                    android:textSize="12dp"
                    android:visibility="visible" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tv_stops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/stop"
                    android:layout_marginTop="-3dp"
                    android:text="2"
                    android:textColor="@color/gray_828282"
                    android:textSize="14dp"
                    card_view:robotoTypeface="roboto_medium"/>


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16.66dp"
                    android:text="     Date"
                    android:textColor="@color/jumbo"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/stop"
                    android:visibility="visible" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/date"
                    android:layout_marginTop="-3dp"
                    android:layout_alignLeft="@+id/date"
                    android:text="dskdskvkcv"
                    android:layout_toRightOf="@+id/stop"
                    android:textColor="@color/gray_828282"
                    android:textSize="14dp"
                    card_view:robotoTypeface="roboto_medium"/>


                <RelativeLayout
                    android:id="@+id/fl_flight_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/fl_flight_transfers"
                    android:minWidth="@dimen/results_item_duration_min_size">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/duration_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16.66dp"
                        android:text="Duration"
                        android:textColor="@color/jumbo"
                        android:textSize="12dp" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/tv_flight_duration_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/duration_title"
                        android:layout_alignLeft="@+id/duration_title"
                        android:layout_marginTop="-3dp"
                        android:text="12ч 30м"
                        android:textColor="@color/gray_828282"
                        android:textSize="14dp" />

                </RelativeLayout>


                <FrameLayout
                    android:id="@+id/fl_flight_transfers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/tv_flight_transfers_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_B3BDBDBD"
                        android:textSize="12dp"/>
                </FrameLayout>





            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>