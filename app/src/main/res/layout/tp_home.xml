<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/abc"
    android:orientation="vertical"
    android:background="@color/fullTransparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/fullTransparent"
            android:id="@+id/auto_layout"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:background="@color/white_transparent"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/tour_auto_search"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginBottom="4dp"
                    android:textDirection="ltr"
                    android:paddingRight="10dp"
                    android:layoutDirection="ltr"
                    android:background="@color/fullTransparent"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_search_hint"
                    android:hint="DESTINATION"
                    android:popupBackground="#ffffff" />
    </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height= "0.5dp"
                android:background="@color/light_black" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/orign"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_marginBottom="4dp"
                        android:textDirection="ltr"
                        android:paddingRight="10dp"
                        android:layoutDirection="ltr"
                        android:background="@color/fullTransparent"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_search_hint"
                        android:hint="ORIGN"
                        android:popupBackground="#ffffff" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height= "0.5dp"
                    android:background="@color/light_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/monthin"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_calender_from" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:onClick="OnClickHotelSelect"
                            android:text="Departure"
                            android:textSize="11sp" />


                        <TextView
                            android:id="@+id/date_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:onClick="OnClickHotelSelect"
                            android:text="15 May 2015"
                            android:textSize="17sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/return_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:onClick="OnClickHotelSelect"
                            android:text=""
                            android:textSize="11sp" />


                        <TextView
                            android:id="@+id/date_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="normal"
                            android:onClick="OnClickHotelSelect"
                            android:text="Add Return"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/oneway"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/cancel"
                        android:visibility="gone">

                    </ImageView>

                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height= "0.5dp"
                android:background="@color/light_black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/cabin_class">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:id="@+id/cabin_return"
                    android:text="1 Adult 0 Child 0 Infants Economy"
                    />



            </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height= "0.5dp"
                    android:background="@color/light_black" />
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/search"
                android:textSize="18sp"
                android:background="@drawable/ripple"
                android:textColor="@color/white"
                android:id="@+id/search_hotels"
                />


        </LinearLayout>
</RelativeLayout>
