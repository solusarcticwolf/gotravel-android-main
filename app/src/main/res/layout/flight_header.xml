<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="1dp">

    <View
        android:id="@+id/v_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_buy"
        android:background="@color/gray_divider"/>


    <ImageView
        android:id="@+id/plane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ticket_plane"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="63dp">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/tv_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="LHE — DBX"
            android:textColor="@color/dark_blue_455A64"
            android:textSize="16dp"
            app:robotoTypeface="roboto_regular"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/tv_stope"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="stope : 2"
            android:layout_marginRight="20dp"
            android:textColor="@color/grey_98000000"
            android:textSize="14dp"
            app:robotoTypeface="roboto_regular"
            android:layout_height="wrap_content" />


        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_cities"
            android:layout_below="@+id/tv_cities"
            android:singleLine="true"
            android:text="4h:37м"
            android:textColor="@color/grey_98000000"
            android:textSize="14dp"
            app:robotoTypeface="roboto_regular"/>
    </RelativeLayout>


    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_buy"
        android:layout_marginTop="75dp"
        android:background="@color/gray_divider"/>


</RelativeLayout>