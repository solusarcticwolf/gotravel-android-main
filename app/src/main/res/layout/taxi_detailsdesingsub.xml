<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:background="@color/bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header1"
        android:visibility="visible">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imagedrop"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Micro"
                        android:textSize="15sp"
                        android:id="@+id/taxi_name_tv"
                        android:textColor="@color/dark_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:src="@drawable/ic_place"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Al Maktoum Airport Dubai"
                                android:id="@+id/from_city_taxi"
                                android:textSize="14sp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="-2dp"
                                android:layout_weight="1"
                                android:textColor="@color/dark_gray"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView

                                android:src="@drawable/ic_place"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:id="@+id/to_city_taxi"
                                android:layout_height="wrap_content"
                                android:text="Jumeirah District Dubai"
                                android:textSize="14sp"
                                android:layout_marginTop="-2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:textColor="@color/dark_gray"/>



                        </LinearLayout>



                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/header2"
        android:layout_below="@+id/header1"
        android:visibility="visible">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/white">



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:orientation="vertical">


             <com.devspark.robototextview.widget.RobotoTextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Booking Details"
                 android:textSize="15sp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:textColor="@color/dark_gray"/>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:weightSum="2">

                     <ImageView
                         android:src="@drawable/ic_place"
                         android:layout_width="15dp"
                         android:layout_height="15dp" />

                     <com.devspark.robototextview.widget.RobotoTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Al Maktoum Airport Dubai"
                         android:id="@+id/from_city_taxi_tv"
                         android:textSize="14sp"
                         android:layout_marginLeft="5dp"
                         android:layout_marginTop="-2dp"
                         android:layout_weight="1"
                         android:textColor="@color/dark_gray"/>


                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                     android:weightSum="2">

                     <ImageView
                         android:src="@drawable/ic_place"
                         android:layout_width="15dp"
                         android:layout_height="15dp" />

                     <com.devspark.robototextview.widget.RobotoTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/to_city_taxi_tv"
                         android:text="Al Maktoum Airport Dubai"
                         android:textSize="14sp"
                         android:layout_marginTop="-2dp"
                         android:layout_marginLeft="5dp"
                         android:layout_weight="1"
                         android:textColor="@color/dark_gray"/>


                 </LinearLayout>





                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_marginTop="15dp">

                     <com.devspark.robototextview.widget.RobotoTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Price"
                         android:textSize="15sp"
                         android:textColor="@color/dark_gray"/>


                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_marginTop="10dp">

                         <com.devspark.robototextview.widget.RobotoTextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Taxes, Surchanges, and Fees"
                             android:textSize="14sp"
                             android:layout_marginLeft="5dp"
                             android:layout_weight="1"
                             android:textColor="@color/dark_gray"/>


                         <com.devspark.robototextview.widget.RobotoTextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"
                             android:layout_marginLeft="5dp"
                             android:layout_weight="1"
                             android:id="@+id/pricee_taxi"
                             android:layout_marginRight="15dp"
                             android:text="USD 38"
                             android:textColor="@color/red"
                             android:textSize="14sp" />
                     </RelativeLayout>


                 </LinearLayout>



                 <View
                     android:id="@+id/second_divider"
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="20dp"
                     android:background="@color/gray_divider" />

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginBottom="10dp"
                     android:layout_marginTop="10dp">

                     <com.devspark.robototextview.widget.RobotoTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Total Amount"
                         android:textSize="18sp"
                         android:layout_marginLeft="5dp"
                         android:layout_weight="1"
                         android:textColor="@color/red"/>


                     <com.devspark.robototextview.widget.RobotoTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_marginLeft="5dp"
                         android:layout_weight="1"
                         android:layout_marginRight="10dp"
                         android:text="USD 38"
                         android:id="@+id/pricee_taxi_tv"
                         android:textColor="@color/red"
                         android:textSize="18sp" />
                 </RelativeLayout>



             </LinearLayout>


         </LinearLayout>



        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>